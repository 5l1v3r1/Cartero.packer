{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo '{{user `password`}}'|sudo -S sh '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/virtualbox.sh",
            "scripts/cleanup.sh",
            "scripts/cartero.sh",
						"scripts/apache.sh",
            "scripts/postfix.sh",
            "scripts/zerodisk.sh"
          ]
        },
        "vmware-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vmware.sh",
            "scripts/cleanup.sh",
            "scripts/cartero.sh",
						"scripts/apache.sh",
            "scripts/postfix.sh",
            "scripts/zerodisk.sh"
          ]
        },
        "amazon-ebs": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vmware.sh",
            "scripts/cleanup.sh",
            "scripts/cartero.sh",
						"scripts/apache.sh",
            "scripts/postfix.sh"
          ]
        }
      }
    }
  ],
  "builders": [
    {
			"type": "amazon-ebs",
      "ami_block_device_mappings": [
      	{
          "delete_on_termination": true,
          "device_name": "/dev/sda"
        }
      ],
      "ami_name": "carterobox-ubuntu",
      "ami_regions": [
        "us-east-1",
        "us-west-1"
      ],
      "instance_type": "m1.small",
      "region": "us-east-1",
      "source_ami": "ami-3b2d7351",
      "ssh_timeout": "5m",
			"ssh_username": "ubuntu"
    },
    {
      "type": "virtualbox-iso",
      "output_directory": "cartero.vbox",
      "vm_name": "Cartero",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_hostname=carterobox<wait>",
        " netcfg/get_domain=c4rt3r0.com<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "guest_os_type": "Ubuntu_64",
      "http_directory": "http",
      "iso_checksum": "6501c8545374665823384bbb6235f865108f56d8a30bbf69dd18df73c14ccb84",
      "iso_checksum_type": "sha256",
      "iso_url": "http://mirrors.mit.edu/ubuntu-releases/15.04/ubuntu-15.04-server-amd64.iso",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -P now' > /tmp/shutdown.sh; echo '{{user `password`}}'|sudo -S sh '/tmp/shutdown.sh'",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    },
    {
      "type": "vmware-iso",
      "output_directory": "cartero.vmwarevm",
      "vm_name": "Cartero",
      "vmdk_name": "cartero",
      "boot_command": [
      "<esc><wait>",
      "<esc><wait>",
      "<enter><wait>",
      "/install/vmlinuz ",
      "initrd=/install/initrd.gz ",
      "biosdevname=0 ",
      "auto-install/enable=true ",
      "debconf/priority=critical ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
      "<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "guest_os_type": "linux",
      "http_directory": "http",
      "iso_checksum": "ca5d9a8438e2434b9a3ac2be67b5c5fa2c1f8e3e40b954519462935195464034",
      "iso_checksum_type": "sha256",
      "iso_url": "http://mirror.pnl.gov/releases/17.04/ubuntu-17.04-server-amd64.iso",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -P now' > /tmp/shutdown.sh; echo '{{user `password`}}'|sudo -S sh '/tmp/shutdown.sh'",
      "vmx_data": {
        "memsize": "2048",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    }
  ]
}
